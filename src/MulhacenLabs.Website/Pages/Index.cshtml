@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-black text-white py-24 px-8">
    <div class="container mx-auto max-w-4xl">
        <!-- Colored accent bars -->
        <div class="flex gap-2 mb-8">
            <div class="h-2 w-16 bg-red-500 rounded-full"></div>
            <div class="h-2 w-16 bg-blue-500 rounded-full"></div>
            <div class="h-2 w-16 bg-yellow-400 rounded-full"></div>
            <div class="h-2 w-16 bg-green-500 rounded-full"></div>
        </div>

        <!-- Headline -->
        <h1 class="text-6xl font-black tracking-tight mb-6">
            Mulhacén Labs
        </h1>

        <!-- Subheadline -->
        <p class="text-xl text-gray-400 mb-10 max-w-2xl">
            Audio plugins. Music. Sound design. Software development. Freelance work. AI services. <br />
            <span class="text-white font-medium">All under one roof.</span>
        </p>

        <!-- Buttons -->
        <div class="flex gap-4">
            <a href="/contact" class="bg-white text-black font-bold px-8 py-3 rounded-full hover:bg-gray-200 transition-colors">
                Hire Me
            </a>
            <a href="/blogs" class="border border-white text-white font-bold px-8 py-3 rounded-full hover:bg-white hover:text-black transition-colors">
                Read Blog
            </a>
        </div>
    </div>
</div>

<!-- Categories Section -->
<div class="container mx-auto px-8 py-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Explore</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <a href="/plugins" class="flex items-center gap-4 p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md hover:border-gray-300 transition-all">
            <div class="w-10 h-10 bg-red-500 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            </div>
            <div>
                <span class="font-semibold text-gray-900">Plugins</span>
                <p class="text-sm text-gray-500">Audio tools for production</p>
            </div>
        </a>
        <a href="/releases" class="flex items-center gap-4 p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md hover:border-gray-300 transition-all">
            <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2z"/></svg>
            </div>
            <div>
                <span class="font-semibold text-gray-900">Releases</span>
                <p class="text-sm text-gray-500">Albums, singles & EPs</p>
            </div>
        </a>
        <a href="/sample-packs" class="flex items-center gap-4 p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md hover:border-gray-300 transition-all">
            <div class="w-10 h-10 bg-yellow-400 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/></svg>
            </div>
            <div>
                <span class="font-semibold text-gray-900">Sample Packs</span>
                <p class="text-sm text-gray-500">Sounds for your projects</p>
            </div>
        </a>
        <a href="/events" class="flex items-center gap-4 p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md hover:border-gray-300 transition-all">
            <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
            </div>
            <div>
                <span class="font-semibold text-gray-900">Events</span>
                <p class="text-sm text-gray-500">Live shows & appearances</p>
            </div>
        </a>
        <a href="/blogs" class="flex items-center gap-4 p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md hover:border-gray-300 transition-all">
            <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/></svg>
            </div>
            <div>
                <span class="font-semibold text-gray-900">Blog</span>
                <p class="text-sm text-gray-500">Tutorials & insights</p>
            </div>
        </a>
    </div>
</div>

<div class="container mx-auto px-8 py-12">

    <!-- Plugins Section -->
    <div id="plugins" class="mb-16">
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-3xl font-bold text-gray-900">Plugins</h2>
            <a href="/plugins" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View all &rarr;</a>
        </div>
        <p class="text-gray-500 mb-8">Professional audio plugins for music production</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var card in Model.Plugins)
            {
                @await Html.PartialAsync("_Card", card)
            }
        </div>
    </div>

    <!-- Releases Section -->
    <div id="releases" class="mb-16">
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-3xl font-bold text-gray-900">Releases</h2>
            <a href="/releases" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View all &rarr;</a>
        </div>
        <p class="text-gray-500 mb-8">Music releases like albums, singles, and EPs</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var card in Model.Releases)
            {
                @await Html.PartialAsync("_Card", card)
            }
        </div>
    </div>

    <!-- Sample Packs Section -->
    <div id="sample-packs" class="mb-16">
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-3xl font-bold text-gray-900">Sample Packs</h2>
            <a href="/sample-packs" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View all &rarr;</a>
        </div>
        <p class="text-gray-500 mb-8">High quality samples for your productions</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var card in Model.SamplePacks)
            {
                @await Html.PartialAsync("_Card", card)
            }
        </div>
    </div>

    <!-- Events Section -->
    <div id="events" class="mb-16">
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-3xl font-bold text-gray-900">Events</h2>
            <a href="/events" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View all &rarr;</a>
        </div>
        <p class="text-gray-500 mb-8">Live shows and appearances</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var card in Model.Events)
            {
                @await Html.PartialAsync("_Card", card)
            }
        </div>
    </div>

<!-- Blogs Section -->
    <div id="blogs" class="mb-16">
        <div class="flex items-center justify-between mb-2">
            <h2 class="text-3xl font-bold text-gray-900">Blog</h2>
            <a href="/blogs" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View all &rarr;</a>
        </div>
        <p class="text-gray-500 mb-8">Tutorials, insights and updates from the lab</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var card in Model.Blogs)
            {
                @await Html.PartialAsync("_Card", card)
            }
        </div>
    </div>

</div>
</div>