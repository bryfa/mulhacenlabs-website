@page
@model IndexModel
@using MulhacenLabs.Website.Models
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="bg-black text-white py-24 px-8">
    <div class="container mx-auto max-w-4xl">
        <!-- Colored accent bars -->
        <div class="flex gap-2 mb-8">
            <div class="h-2 w-16 bg-red-500 rounded-full"></div>
            <div class="h-2 w-16 bg-blue-500 rounded-full"></div>
            <div class="h-2 w-16 bg-yellow-400 rounded-full"></div>
            <div class="h-2 w-16 bg-green-500 rounded-full"></div>
        </div>

        <!-- Headline -->
        <h1 class="text-6xl font-black tracking-tight mb-6">
            Mulhac√©n Labs
        </h1>

        <!-- Subheadline -->
        <p class="text-xl text-gray-400 mb-10 max-w-2xl">
            Audio plugins. Music. Sound design. Software development. Freelance work. AI services. <br />
            <span class="text-white font-medium">All under one roof.</span>
        </p>

        <!-- Buttons -->
        <div class="flex gap-4">
            <a href="/contact" class="bg-white text-black font-bold px-8 py-3 rounded-full hover:bg-gray-200 transition-colors">
                Hire Me
            </a>
            <a href="/blogs" class="border border-white text-white font-bold px-8 py-3 rounded-full hover:bg-white hover:text-black transition-colors">
                Read Blog
            </a>
        </div>
    </div>
</div>

<!-- Categories Section -->
<div class="container mx-auto px-8 py-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Explore</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        @foreach (var cat in CategoryRegistry.All)
        {
            <a href="/@cat.Slug" class="flex items-center gap-4 p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md hover:border-gray-300 transition-all">
                <div class="w-10 h-10 @cat.Color rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">@Html.Raw(cat.IconSvg)</svg>
                </div>
                <div>
                    <span class="font-semibold text-gray-900">@cat.DisplayName</span>
                    <p class="text-sm text-gray-500">@cat.ExploreDescription</p>
                </div>
            </a>
        }
    </div>
</div>

<div class="container mx-auto px-8 py-12">
    @foreach (var cat in CategoryRegistry.All)
    {
        <div id="@cat.Slug" class="mb-16">
            <div class="flex items-center justify-between mb-2">
                <h2 class="text-3xl font-bold text-gray-900">@cat.DisplayName</h2>
                <a href="/@cat.Slug" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View all &rarr;</a>
            </div>
            <p class="text-gray-500 mb-8">@cat.Description</p>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var card in Model.CategoryItems[cat.Slug])
                {
                    @await Html.PartialAsync("_Card", card)
                }
            </div>
        </div>
    }
</div>
