@page
@model ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container mx-auto px-8 py-12 max-w-2xl">
    <!-- Header -->
    <div class="mb-12">
        <h1 class="text-5xl font-bold text-gray-900 mb-4">Get In Touch</h1>
        <p class="text-gray-500 text-lg">Interested in working together? Drop me a message and let's talk.</p>
    </div>

    <!-- Status Message -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        @if (Model.IsError)
        {
            <div class="bg-red-50 border border-red-200 text-red-800 px-6 py-4 rounded-lg mb-8">
                @Model.Message
            </div>
        }
        else
        {
            <div class="bg-green-50 border border-green-200 text-green-800 px-6 py-4 rounded-lg mb-8">
                @Model.Message
            </div>
        }
    }

    <!-- Contact Form -->
    <form method="post" class="space-y-6">
        <!-- Name -->
        <div>
            <label asp-for="Form.Name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
            <input asp-for="Form.Name" type="text" required 
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
        </div>

        <!-- Email -->
        <div>
            <label asp-for="Form.Email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
            <input asp-for="Form.Email" type="email" required 
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
        </div>

        <!-- Subject -->
        <div>
            <label asp-for="Form.Subject" class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
            <input asp-for="Form.Subject" type="text" required 
                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
        </div>

        <!-- Message -->
        <div>
            <label asp-for="Form.Message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
            <textarea asp-for="Form.Message" rows="6" required 
                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
        </div>

        <!-- Submit Button -->
        <div>
            <button type="submit" 
                    class="w-full bg-black text-white font-bold px-8 py-4 rounded-lg hover:bg-gray-800 transition-colors">
                Send Message
            </button>
        </div>
    </form>

    <!-- Alternative Contact Info -->
    <div class="mt-12 pt-12 border-t border-gray-200">
        <p class="text-gray-500 text-center">Or reach me directly at <a href="mailto:contact@mulhacenlabs.com" class="text-blue-600 hover:text-blue-800">contact@mulhacenlabs.com</a></p>
    </div>
</div>