<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mulhacén Labs</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

    <!-- Navigation -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto px-8 py-4">
            <div class="flex items-center justify-between">
                <!-- Logo -->
                <a asp-page="/Index" class="text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
                    Mulhacén Labs
                </a>

                <!-- Mobile Menu Button -->
                <button id="mobile-menu-button" class="md:hidden text-gray-600 hover:text-gray-900 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        <path id="close-icon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>

                <!-- Desktop Nav Links -->
                <ul class="hidden md:flex items-center gap-8">
                    <li><a asp-page="/Index" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Home</a></li>
                    <li><a href="/plugins" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Plugins</a></li>
                    <li><a href="/releases" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Releases</a></li>
                    <li><a href="/sample-packs" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Sample Packs</a></li>
                    <li><a href="/events" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Events</a></li>
                    <li><a href="/blogs" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Blog</a></li>
                    <li><a asp-page="/Contact" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Contact</a></li>
                </ul>
            </div>

            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
                <ul class="flex flex-col gap-4">
                    <li><a asp-page="/Index" class="block text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Home</a></li>
                    <li><a href="/plugins" class="block text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Plugins</a></li>
                    <li><a href="/releases" class="block text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Releases</a></li>
                    <li><a href="/sample-packs" class="block text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Sample Packs</a></li>
                    <li><a href="/events" class="block text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Events</a></li>
                    <li><a href="/blogs" class="block text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Blog</a></li>
                    <li><a asp-page="/Contact" class="block text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Contact</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="container mx-auto px-8 py-8 flex items-center justify-between">
            <p class="text-gray-400 text-sm">&copy; 2026 Mulhacén Labs. All rights reserved.</p>
            <a asp-page="/Privacy" class="text-gray-400 hover:text-gray-600 text-sm">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>