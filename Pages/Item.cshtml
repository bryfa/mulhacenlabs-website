@page "/item/{category}/{slug}"
@model ItemModel
@{
    ViewData["Title"] = Model.Card?.Title;
    
    var categoryColors = new Dictionary<string, string>
    {
        { "plugins", "bg-red-500" },
        { "releases", "bg-blue-500" },
        { "sample-packs", "bg-yellow-400" },
        { "events", "bg-green-500" },
        { "blogs", "bg-purple-500" }
    };
    var bgColor = Model.Card != null && categoryColors.ContainsKey(Model.Card.Category) 
        ? categoryColors[Model.Card.Category] 
        : "bg-gray-400";
}

@if (Model.Card != null)
{
    <div class="container mx-auto px-8 py-12 max-w-4xl">
        <!-- Back button -->
        <a href="/" class="text-blue-600 hover:text-blue-800 text-sm font-medium mb-8 inline-block">‚Üê Back to all</a>

        <!-- Header -->
        <div class="mb-8">
            <div class="flex items-center gap-4 mb-4">
                <span class="bg-gray-100 text-gray-600 text-sm px-3 py-1 rounded-full">@Model.Card.Category</span>
                @if (Model.Card.Featured)
                {
                    <span class="bg-yellow-100 text-yellow-800 text-sm px-3 py-1 rounded-full">Featured</span>
                }
            </div>
            <h1 class="text-5xl font-bold text-gray-900 mb-4">@Model.Card.Title</h1>
            <p class="text-gray-500 text-xl">@Model.Card.Description</p>
        </div>

        <!-- Image -->
        @if (!string.IsNullOrEmpty(Model.Card.Image) && Model.Card.Image != "/images/placeholder.jpg")
        {
            <img src="@Model.Card.Image" alt="@Model.Card.Title" class="w-full h-96 object-cover rounded-xl mb-8" />
        }
        else
        {
            <div class="@bgColor w-full h-96 rounded-xl flex items-center justify-center mb-8">
                <span class="text-white text-6xl font-black opacity-20">@Model.Card.Category.ToUpper()</span>
            </div>
        }

        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mb-8">
            @foreach (var tag in Model.Card.Tags)
            {
                <span class="bg-gray-100 text-gray-600 text-sm px-3 py-1 rounded-full">@tag</span>
            }
        </div>

        <!-- Content -->
        <div class="prose max-w-none">
            @Html.Raw(Model.Card.Content)
        </div>

        <!-- Date -->
        <div class="mt-8 pt-8 border-t border-gray-200">
            <span class="text-gray-400 text-sm">Published @Model.Card.Date.ToString("MMMM dd, yyyy")</span>
        </div>
    </div>
}