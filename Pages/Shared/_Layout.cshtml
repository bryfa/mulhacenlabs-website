<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mulhacen Labs</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

    <!-- Navigation -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto px-8 py-4 flex items-center justify-between">
            <!-- Logo -->
            <a asp-page="/Index" class="text-xl font-bold text-gray-900 hover:text-blue-600 transition-colors">
                Mulhacen Labs
            </a>

            <!-- Nav Links -->
            <ul class="flex items-center gap-8">
                <li><a asp-page="/Index" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Home</a></li>
                <li><a href="/#plugins" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Plugins</a></li>
                <li><a href="/#albums" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Albums</a></li>
                <li><a href="/#sample-packs" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Sample Packs</a></li>
                <li><a href="/#events" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Events</a></li>
                <li><a href="/#blogs" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">Blog</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-12">
        <div class="container mx-auto px-8 py-8 flex items-center justify-between">
            <p class="text-gray-400 text-sm">&copy; 2026 Mulhacen Labs. All rights reserved.</p>
            <a asp-page="/Privacy" class="text-gray-400 hover:text-gray-600 text-sm">Privacy</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>